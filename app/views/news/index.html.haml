.version_wrapper
  .left_column
    .news
      %h2
      - @news.each do |n|
        .news_post
          %h6= n.updated_at.strftime("%B %d, %Y")
          %p
            = n.contenxt
  .right_column
    - @posts.each_index do |p|
      = render :partial => 'layouts/component', :locals => { :@item  => @posts[p], :side => ''}
