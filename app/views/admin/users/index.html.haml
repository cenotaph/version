%h1 Listing users
%table
  %tr
    %th id
    %th Username
    %th Realname
    %th Email
  - for user in  @users
    %tr
      %td= h user.id
      %td= h user.login
      %td= h user.realname
      %td= h user.email
      %td= link_to 'Show', [:admin, user]
      %td= link_to 'Edit', edit_admin_user_path(user)
      %td= link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New user', new_admin_user_path
