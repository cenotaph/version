%h1 New user
= current_user.realname
- form_for([:admin,@user]) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br/
    = f.text_field :title
  = f.hidden_field :user_id, {:value => current_user.id}
  %p
    = f.label :category
    %br/
    = f.collection_select :category_id, Category.find(:all), :id, :name
  %p
    = f.label :content
    %br/
    = f.text_area :content
  %p
    = f.submit "Create"
= link_to 'Back', admin_users_path
