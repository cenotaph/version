.admin_item
  %h1 Editing author
  = form_for([:admin, @author]) do |f|
    %p
      = f.label :name
      %br/
      = f.text_field :name
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :website
      %br/
      = f.text_field :website
    %p
      = f.submit "Update"
  = link_to 'Show', @author
  |
  \#{link_to 'Back', admin_authors_path}
