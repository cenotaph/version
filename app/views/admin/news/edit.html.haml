.admin_item
  %h1 Editing news
  = form_for([:admin , @news]) do |f|

    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label "Content"
      %br/
      = f.text_area :contenxt, :class => "mceEditor"
    = f.hidden_field :user_id, {:value => current_user.id}
    %p
      = f.submit "Update"
  = link_to 'Show', @news
  |
  \#{link_to 'Back', admin_news_index_path}
