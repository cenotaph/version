<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Website</th>
  </tr>

<% for author in @authors %>
  <tr>
    <td><%=h author.name %></td>
    <td><%=h author.description %></td>
    <td><%=h author.website %></td>
    <td><%= link_to 'Show', author %></td>

  </tr>
<% end %>
</table>

