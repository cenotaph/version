<h1>Listing videos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>User</th>
    <th>Category</th>
    <th>Location</th>
    <th>Description</th>
  </tr>

<% for video in @videos %>
  <tr>
    <td><%=h video.title %></td>
    <td><%=h video.author.name %></td>
    <td><%=h video.user.realname %></td>
    <td><%=h video.category.name %></td>
    <td><%=h video.location %></td>
    <td><%=h video.description %></td>
    <td><%= link_to 'Show', video %></td>
  </tr>
<% end %>
</table>

